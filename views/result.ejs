<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>GitHub Analyzer</title>
  <script src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/gsap.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    body {
      margin: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      align-items: center;
      background: linear-gradient(-45deg, #22333b, #0a0908, #22333b, #0a0908);
      background-size: 400% 400%;
      animation: gradientBG 15s ease infinite;
      color: white;
      padding-bottom: 40px;
    }

    @keyframes gradientBG {
      0% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }

    h1 {
      margin-top: 30px;
      font-size: 2.2rem;
      font-weight: 700;
      text-align: center;
      color: #ffffff;
    }

    .back-button {
      margin-top: 15px;
      display: inline-block;
      padding: 10px 20px;
      border-radius: 12px;
      background: rgba(255, 255, 255, 0.1);
      border: 1px solid rgba(255, 255, 255, 0.3);
      color: white;
      text-decoration: none;
      font-weight: bold;
      transition: all 0.3s ease;
    }

    .back-button:hover {
      background: rgba(255, 255, 255, 0.25);
      transform: translateY(-3px);
      box-shadow: 0 6px 20px rgba(0,0,0,0.3);
    }

    .glass-card {
      background: rgba(255, 255, 255, 0.08);
      backdrop-filter: blur(14px);
      border-radius: 18px;
      border: 1px solid rgba(255, 255, 255, 0.2);
      box-shadow: 0 6px 25px rgba(0,0,0,0.3);
      padding: 20px;
      margin: 20px 0;
      width: 90%;
      max-width: 950px;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .glass-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 12px 35px rgba(0,0,0,0.4);
    }

    .profile {
      display: flex;
      align-items: center;
      gap: 15px;
    }

    .profile img {
      border-radius: 50%;
      width: 80px;
      height: 80px;
      border: 2px solid rgba(255,255,255,0.4);
    }

    .stats {
      display: flex;
      flex-wrap: wrap;
      gap: 15px;
      margin-top: 15px;
    }

    .stat-card {
      flex: 1 1 200px;
      background: rgba(255,255,255,0.1);
      padding: 15px;
      border-radius: 12px;
      text-align: center;
    }

    .stat-card h4 {
      margin: 5px 0;
      font-size: 1rem;
      color: #fff;
      opacity: 0.8;
    }

    .stat-card p {
      margin: 0;
      font-size: 1.2rem;
      font-weight: bold;
    }

    .repo-list, .lang-list {
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
      margin-top: 10px;
    }

    .repo-item, .lang-item {
      background: rgba(255,255,255,0.1);
      padding: 8px 12px;
      border-radius: 10px;
      font-weight: bold;
    }

    canvas {
      width: 100% !important;
      height: 350px !important;
      margin-top: 20px;
    }

    @media (max-width: 650px) {
      h1 { font-size: 1.6rem; }
      .profile { flex-direction: column; text-align: center; }
      .profile img { width: 70px; height: 70px; }
    }
  </style>
</head>
<body>
  <h1>GitHub-User-Data</h1>
  <a href="/" class="back-button">⬅ Back</a>

  <!-- Profile Card -->
  <div class="glass-card profile">
    <img src="<%= user.avatarUrl %>" alt="avatar">
    <div>
      <h2 class="text-xl font-bold"><%= user.name || user.login %></h2>
      <p class="opacity-80"><%= user.bio || "No bio available" %></p>
      <p class="opacity-60">Followers: <%= user.followers.totalCount %></p>
    </div>
  </div>

  <!-- Stats Cards -->
  <div class="glass-card stats">
    <div class="stat-card">
      <h4>Public Repos</h4>
      <p><%= user.repositories.nodes.length %></p>
    </div>
    <div class="stat-card">
      <h4>Total Stars</h4>
      <p><%= user.totalStars %></p>
    </div>
    <div class="stat-card">
      <h4>Total Contributions</h4>
      <p><%= user.activity.data.reduce((a,b)=>a+b,0) %></p>
    </div>
  </div>

  <!-- Languages Section -->
  <div class="glass-card">
    <h4>Languages Used</h4>
    <div class="lang-list">
      <% if(user.languages && Object.keys(user.languages).length > 0) { %>
        <% Object.keys(user.languages).forEach(lang => { %>
          <div class="lang-item"><%= lang %> (<%= user.languages[lang] %>)</div>
        <% }) %>
      <% } else { %>
        <p>No language data available</p>
      <% } %>
    </div>
  </div>

  <!-- Repositories Section -->
  <div class="glass-card">
    <h4>Repositories</h4>
    <div class="repo-list">
      <% if(user.repositories.nodes.length > 0){ %>
        <% user.repositories.nodes.forEach(repo => { %>
          <div class="repo-item"><%= repo.name %> ⭐ <%= repo.stargazerCount %></div>
        <% }) %>
      <% } else { %>
        <p>No repositories available</p>
      <% } %>
    </div>
  </div>

  <!-- Contributions Chart -->
  <div class="glass-card">
    <h4>Daily Contributions Overview</h4>
    <canvas id="contribChart"></canvas>
  </div>

  <script>
    // Animate cards
    gsap.from(".glass-card", {
      opacity: 0,
      y: 40,
      duration: 0.8,
      stagger: 0.2,
      ease: "power3.out"
    });

    // Contributions Chart Fix
    const labels = <%- JSON.stringify(user.activity.labels || []) %>;
    const dataPoints = <%- JSON.stringify(user.activity.data || []) %>;
    const ctx = document.getElementById('contribChart').getContext('2d');

    if(labels.length && dataPoints.length){
      new Chart(ctx, {
        type: 'bar',
        data: {
          labels: labels,
          datasets: [{
            label: 'Daily Contributions',
            data: dataPoints,
            backgroundColor: 'rgba(0, 255, 0, 0.5)',
            borderColor: 'rgba(0, 255, 0, 0.8)',
            borderWidth: 1
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: { labels: { color: "white" } },
            tooltip: {
              enabled: true,
              backgroundColor: 'rgba(0,0,0,0.8)',
              titleColor: 'white',
              bodyColor: 'white'
            }
          },
          scales: {
            x: { ticks: { color: "white" } },
            y: { ticks: { color: "white" }, beginAtZero: true }
          }
        }
      });
    } else {
      ctx.canvas.parentElement.innerHTML = "<p>No contributions data available</p>";
    }
  </script>
</body>
</html>
