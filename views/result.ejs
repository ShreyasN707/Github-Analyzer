<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>GitHub Analyzer</title>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/gsap.min.js"></script>
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
      color: white;
      margin: 0;
      padding: 0;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .glass-card {
      background: rgba(255, 255, 255, 0.08);
      backdrop-filter: blur(16px) saturate(180%);
      -webkit-backdrop-filter: blur(16px) saturate(180%);
      border-radius: 20px;
      border: 1px solid rgba(255, 255, 255, 0.2);
      box-shadow: 0 8px 32px rgba(0,0,0,0.25);
      padding: 20px;
      margin: 20px 0;
      width: 90%;
      max-width: 1000px;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .glass-card:hover {
      transform: translateY(-6px);
      box-shadow: 0 12px 40px rgba(0,0,0,0.35);
    }

    h1 {
      margin-top: 30px;
      font-size: 2.5rem;
      font-weight: 700;
      text-align: center;
      background: linear-gradient(to right, #ff6a00, #ee0979);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }

    .profile {
      display: flex;
      align-items: center;
      gap: 15px;
    }

    .profile img {
      border-radius: 50%;
      width: 80px;
      height: 80px;
      border: 2px solid rgba(255,255,255,0.3);
    }

    .stats {
      display: flex;
      flex-wrap: wrap;
      gap: 15px;
      margin-top: 15px;
    }

    .stat-card {
      flex: 1 1 200px;
      background: rgba(255,255,255,0.1);
      padding: 15px;
      border-radius: 12px;
      text-align: center;
    }

    .stat-card h4 {
      margin: 5px 0;
      font-size: 1rem;
      color: #fff;
      opacity: 0.8;
    }

    .stat-card p {
      margin: 0;
      font-size: 1.2rem;
      font-weight: bold;
    }

    .list-card {
      margin-top: 20px;
      padding: 15px;
      border-radius: 12px;
      background: rgba(255,255,255,0.05);
    }

    .list-card h4 {
      margin-bottom: 10px;
    }

    .list-card ul {
      list-style: none;
      padding: 0;
      max-height: 250px;
      overflow-y: auto;
    }

    .list-card li {
      padding: 5px 0;
      border-bottom: 1px solid rgba(255,255,255,0.2);
    }

    canvas {
      width: 100% !important;
      height: 400px !important;
      margin-top: 20px;
    }
  </style>
</head>
<body>
  <h1>GitHub User Analysis</h1>

  <!-- Profile Card -->
  <div class="glass-card profile">
    <img src="<%= user.avatarUrl %>" alt="avatar">
    <div>
      <h2 class="text-xl font-bold"><%= user.name || user.login %></h2>
      <p class="opacity-80"><%= user.bio || "No bio available" %></p>
      <p class="opacity-60">Followers: <%= user.followers.totalCount %></p>
    </div>
  </div>

  <!-- Stats Cards -->
  <div class="glass-card stats">
    <div class="stat-card">
      <h4>Public Repos</h4>
      <p><%= user.repositories.nodes.length %></p>
    </div>
    <div class="stat-card">
      <h4>Total Stars</h4>
      <p><%= user.totalStars %></p>
    </div>
    <div class="stat-card">
      <h4>Total Commits</h4>
      <p><%= user.activity.data.reduce((a,b)=>a+b,0) %></p>
    </div>
  </div>

  <!-- Language List -->
  <div class="glass-card list-card">
    <h4>Languages Used</h4>
    <ul>
      <% if(Object.keys(user.languages).length > 0){ %>
        <% Object.keys(user.languages).forEach(lang => { %>
          <li><%= lang %> - <%= user.languages[lang] %> repos</li>
        <% }) %>
      <% } else { %>
        <li>No languages data available</li>
      <% } %>
    </ul>
  </div>

  <!-- Repositories List -->
  <div class="glass-card list-card">
    <h4>Repositories</h4>
    <ul>
      <% if(user.repositories.nodes.length > 0){ %>
        <% user.repositories.nodes.forEach(repo => { %>
          <li><%= repo.name %> - ‚≠ê <%= repo.stargazerCount %> | üç¥ <%= repo.forkCount %></li>
        <% }) %>
      <% } else { %>
        <li>No repositories available</li>
      <% } %>
    </ul>
  </div>

  <!-- Repositories Stars Graph -->
  <div class="glass-card">
    <h4>Repository Stars Overview</h4>
    <canvas id="repoChart"></canvas>
  </div>

  <script>
    // Animate cards on load
    gsap.from(".glass-card", {
      opacity: 0,
      y: 40,
      duration: 0.8,
      stagger: 0.2,
      ease: "power3.out"
    });

    // Stars Bar Chart
    const ctx = document.getElementById('repoChart').getContext('2d');
    new Chart(ctx, {
      type: 'bar',
      data: {
        labels: <%- JSON.stringify(user.repositories.nodes.map(r => r.name)) %>,
        datasets: [{
          label: 'Stars',
          data: <%- JSON.stringify(user.repositories.nodes.map(r => r.stargazerCount)) %>,
          backgroundColor: 'rgba(255, 107, 107, 0.7)',
          borderColor: 'rgba(255, 107, 107, 1)',
          borderWidth: 1,
          borderRadius: 6
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          legend: { labels: { color: "white" } }
        },
        scales: {
          x: { ticks: { color: "white" } },
          y: { ticks: { color: "white" }, beginAtZero: true }
        }
      }
    });
  </script>
</body>
</html>
