<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>GitHub Analyzer</title>
  <style>
    /* Background gradient animation */
    body {
      margin: 0;
      font-family: Arial, sans-serif;
      height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      background: linear-gradient(-45deg, #22333b, #0a0908, #22333b, #0a0908);
      background-size: 400% 400%;
      animation: gradientBG 15s ease infinite;
      color: white;
    }

    @keyframes gradientBG {
      0% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }

    .container {
      text-align: center;
      background: rgba(255, 255, 255, 0.08);
      padding: 2rem;
      border-radius: 20px;
      backdrop-filter: blur(12px);
      width: 90%;
      max-width: 450px;
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
    }

    .logo {
      width: 80px;
      margin-bottom: 1rem;
    }

    h1 {
      margin-bottom: 1rem;
      font-size: 1.8rem;
      font-weight: bold;
      color: #ffffff;
    }

    .form-group {
      display: flex;
      flex-direction: column;
      gap: 1rem;
      margin-bottom: 1.5rem;
      align-items: center;
    }

    input {
      padding: 0.6rem;
      border-radius: 10px;
      border: 1px solid rgba(255, 255, 255, 0.4);
      outline: none;
      font-size: 1rem;
      text-align: center;
      width: 85%;
      max-width: 300px;
      background: rgba(255, 255, 255, 0.15);
      color: #ffffff;
      backdrop-filter: blur(8px);
    }

    input::placeholder {
      color: rgba(255, 255, 255, 0.7);
    }

    .buttons {
      display: flex;
      flex-direction: column;
      gap: 0.7rem;
      align-items: center;
      width: 80%;
      max-width: 260px;
    }

    button {
      width: 100%;
      padding: 0.55rem;
      border: none;
      border-radius: 10px;
      font-size: 1rem;
      font-weight: bold;
      cursor: pointer;
      transition: 0.3s ease;
    }

    .btn-primary {
      background: rgba(255, 255, 255, 0.15);
      color: #ffffff;
      border: 1px solid rgba(255, 255, 255, 0.5);
      backdrop-filter: blur(6px);
    }

    .btn-primary:hover {
      background: rgba(255, 255, 255, 0.3);
    }

    .btn-secondary {
      background: #22333b;
      color: #ffffff;
      border: 1px solid #ffffff;
    }

    .btn-secondary:hover {
      background: #2e444d;
    }

    @media (max-width: 600px) {
      h1 {
        font-size: 1.5rem;
      }

      .container {
        padding: 1.5rem;
      }

      .logo {
        width: 60px;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <!-- Transparent GitHub Logo (white for dark backgrounds) -->
    <img src="https://upload.wikimedia.org/wikipedia/commons/9/91/Octicons-mark-github.svg" 
         alt="GitHub Logo" class="logo" />
    <h1>GitHub Analyzer</h1>

    <!-- One single form -->
    <form id="mainForm" action="/analyzer" method="POST" class="form-group">
      <input type="text" name="user1" placeholder="Enter GitHub Username" required />
      <input type="text" name="user2" placeholder="Enter Second Username" id="user2" style="display:none;" />
      <div class="buttons">
        <button type="submit" class="btn-primary" id="submitBtn">Fetch User Data</button>
        <button type="button" class="btn-secondary" onclick="toggleMode()" id="modeBtn">Switch to Compare Mode</button>
      </div>
    </form>
  </div>

  <script>
    let compareMode = false;

    function toggleMode() {
      const user2Input = document.getElementById("user2");
      const form = document.getElementById("mainForm");
      const submitBtn = document.getElementById("submitBtn");
      const modeBtn = document.getElementById("modeBtn");

      compareMode = !compareMode;

      if (compareMode) {
        user2Input.style.display = "block";
        user2Input.required = true;
        form.action = "/analyzer";
        submitBtn.textContent = "Compare Users";
        modeBtn.textContent = "Switch to Single Mode";
      } else {
        user2Input.style.display = "none";
        user2Input.required = false;
        form.action = "/fetch";
        submitBtn.textContent = "Fetch User Data";
        modeBtn.textContent = "Switch to Compare Mode";
      }
    }
  </script>
</body>
</html>
