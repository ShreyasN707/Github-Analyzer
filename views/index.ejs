<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>GitHub Analyzer</title>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@500;700&display=swap');

    body {
      margin: 0;
      font-family: 'Inter', sans-serif;
      height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      background: radial-gradient(circle at top left, #1a1a1a, #0d0d0d);
      color: #fff;
      overflow: hidden;
      position: relative;
    }

    /* Animated background */
    body::before {
      content: "";
      position: absolute;
      top: -50%;
      left: -50%;
      width: 200%;
      height: 200%;
      background: conic-gradient(from 180deg, rgba(255,102,0,0.15), transparent 50%, rgba(255,102,0,0.15));
      animation: rotate 20s linear infinite;
      z-index: 0;
    }

    @keyframes rotate {
      100% { transform: rotate(360deg); }
    }

    .container {
      position: relative;
      z-index: 1;
      background: rgba(20, 20, 20, 0.9);
      padding: 40px 30px;
      border-radius: 18px;
      box-shadow: 0 0 40px rgba(255,102,0,0.5), 0 0 60px rgba(255,102,0,0.2) inset;
      text-align: center;
      width: 360px;
      transition: width 0.4s ease;
      backdrop-filter: blur(12px);
    }

    h2 {
      margin-bottom: 25px;
      color: #ff6600;
      letter-spacing: 1px;
      font-size: 1.5rem;
      transition: color 0.3s ease;
    }

    form {
      display: flex;
      flex-direction: column;
      gap: 15px;
    }

    input {
      width: 100%;
      padding: 12px 14px;
      border-radius: 10px;
      border: none;
      background: #111;
      color: #fff;
      font-size: 1rem;
      outline: none;
      box-shadow: inset 0 0 8px rgba(255,102,0,0.4);
      transition: box-shadow 0.3s ease, transform 0.2s ease;
    }

    input:focus {
      box-shadow: 0 0 14px rgba(255,102,0,0.8);
      transform: scale(1.02);
    }

    button.submit-btn {
      background: linear-gradient(135deg, #ff6600, #cc5200);
      border: none;
      padding: 12px 0;
      border-radius: 10px;
      color: #fff;
      font-size: 1.1rem;
      font-weight: 700;
      cursor: pointer;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    button.submit-btn:hover {
      transform: translateY(-3px);
      box-shadow: 0 0 18px rgba(255,102,0,0.7);
    }

    .top-right-btn {
      position: absolute;
      top: 20px;
      right: 20px;
      background: transparent;
      color: #ff6600;
      font-weight: 700;
      border: 2px solid #ff6600;
      padding: 8px 15px;
      border-radius: 8px;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .top-right-btn:hover {
      background: #ff6600;
      color: #fff;
    }

    .hidden {
      display: none;
    }

    .fade {
      transition: all 0.35s ease;
      opacity: 1;
    }

    .fade.hidden {
      opacity: 0;
      pointer-events: none;
    }
  </style>
</head>
<body>
  <div class="container" id="container">
    <button type="button" class="top-right-btn" onclick="toggleCompare()">Compare</button>
    <h2 id="title">Enter Username</h2>

    <!-- always posts to /compare -->
    <form id="userForm" method="post" action="/analyzer">
      <input type="text" name="user1" placeholder="Username" required>
      <input type="text" name="user2" placeholder="Second Username" class="hidden fade">
      <button type="submit" class="submit-btn">Submit</button>
    </form>
  </div>

  <script>
    let compareMode = false;

    function toggleCompare() {
      compareMode = !compareMode;
      const user2 = document.querySelector('input[name="user2"]');
      const title = document.getElementById('title');
      const btn = document.querySelector('.top-right-btn');
      const container = document.getElementById('container');

      if(compareMode){
        user2.classList.remove('hidden');
        setTimeout(() => user2.classList.add('fade'), 10);
        title.textContent = "Compare Two Profiles";
        btn.textContent = "Single Mode";
        container.style.width = '400px';
      } else {
        user2.classList.add('hidden');
        user2.classList.remove('fade');
        title.textContent = "Enter Username";
        btn.textContent = "Compare";
        container.style.width = '360px';
      }
    }
  </script>
</body>
</html>
